{
	"name": "kly/football-klepto",
    "description": "Football Api Integration",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "slim/slim": "^3.10",
        "symplify/easy-coding-standard": "^4.5"
    },
    "autoload": {
        "psr-4": {"Football\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {
            "Football\\Test\\": "test/"
        }
    },
    "scripts":{
        "test": "phpunit --bootstrap ./test/bootstrap.php ./test/",
        "test:provider:verbose":"phpunit --configuration=phpunit.xml --testsuite provider -vvv --debug",
        "cs-check": "ecs check src test",
        "cs-fix": "ecs check src test --fix"
    }
}
